#!/bin/bash

# Check if a parameter is provided
if [ -z "$1" ]; then
  echo "Usage: $0 <0-9>"
  exit 1
fi

# Get the parameter and map it to an emoji
case "$1" in
  0)
    emoji="ðŸ”´"
    ;;
  1)
    emoji="ðŸŸ "
    ;;
  2)
    emoji="ðŸŸ¡"
    ;;
  3)
    emoji="ðŸŸ¢"
    ;;
  4)
    emoji="ðŸ”µ"
    ;;
  5)
    emoji="ðŸŸ£"
    ;;
  6)
    emoji="ðŸŸ¤"
    ;;
  7)
    emoji="âšª"
    ;;
  8)
    emoji="âš«"
    ;;
  9)
    emoji="ðŸ”¥"
    ;;
  *)
    echo "Invalid number. Please provide a number between 0 and 9."
    exit 1
    ;;
esac

# Use xdotool to type the selected emoji
xdotool type "$emoji"
