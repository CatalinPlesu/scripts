#!/bin/bash

# Array of directories to update
source /home/catalin/scripts/git_dirs

# Loop through each directory
for dir in "${dirs[@]}"; do
    if [ -d "$dir/.git" ]; then
        echo "Updating $dir..."
        (
            cd "$dir" || exit
			git add .
            git commit
            git push
        )
        echo "✅ $dir pushed"
    else
        echo "❌ $dir is not a git repository"
    fi
    echo
done
